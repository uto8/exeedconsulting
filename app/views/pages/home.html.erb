<div class="card mb-5">
  <div class="card-body">
    <%= search_form_for(@q, url: root_path) do |f| %>
      <div class="form-group">
        <%= f.label "教科書名" %>
        <%= f.text_field :title_cont, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "大学名" %>
        <%= f.text_field :university_university_name_eq, class:"form-control" %>
      </div>
      <br>
      <%= f.submit '検索', class:"btn btn-primary shadow" %>
    <% end %>
  </div>
</div>
<div class="row">
  <% @items_results.each do |item| %>
    <div class="col-sm-6 col-lg-2 col-6">
      <%= link_to item_path(item) do %>
        <div class="position-relative text-center" style="background:#EEEEEE;">
          <% if item.images.attached? %>
            <%= image_tag item.images[0] ,style:"height:150px; width:100%; object-fit:cover;" %>
          <% else %>
          <div style="height:150px; width:100%;"></div>
          <% end %>
          <span class="position-absolute py-1 px-2" style="bottom:0; left:0; background:rgba(0, 0, 0, 0.7); color:#fff;">
            <%= item.price %>
          </span>
          <% if item.is_sold == true %>
            <span class="position-absolute py-1 px-2" style="top:50%; left:50%; transform:translate(-50%, -50%); border:1px solid navy; color:navy;">
              SOLD OUT
            </span>
          <% end %>
        </div>
        <p class="mt-2" style="color:black">
          <%= item.title %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
