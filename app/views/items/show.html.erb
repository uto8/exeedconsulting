<div class="row">
  <div class="col-lg-7 col-12">
    <div class="row">
      <% if @item.images.attached? %>
        <div class="col-2"></div>
        <div class="col-10">
          <div class="box text-center p-3 h-100" style="background:#EEEEEE;">
            <% @item.images.each do |image| %>
              <%= image_tag(image, width:100) %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-5 col-12">
    <h2><%= @item.title %></h2>
    <h4 class="text-primary mb-4">¥<%= @item.price %></h4>
    <div class="d-flex px-1 py-3" style="font-size:35px;">
      <i class="fa-regular fa-heart"></i>
    </div>
    <%= link_to "購入手続き", "", class:"btn btn-block btn-primary mb-5" %>
    <h4>商品の説明</h4>
    <hr>
    <p class="mb-5"><%= @item.description %></p>
    <h4>商品の情報</h4>
    <hr>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row">商品の状態</th>
          <td><%= @item.item_status_i18n %></td>
        </tr>
        <tr>
          <th scope="row">配送料の負担</th>
          <td><%= @item.delivery_fee %></td>
        </tr>
        <tr>
          <th scope="row">発送までの時間</th>
          <td><%= @item.delivery_day %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
